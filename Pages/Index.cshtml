@page "/"
@model ImageOptimize.Pages.IndexModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <h1>Image Optimize</h1>
    <div class="form">
        <form method="post" enctype="multipart/form-data">
            <label for="images">Image</label>
            <input type="file" id="images" name="images" multiple/>
            <label for="format">Format</label>
            <select name="format" id="format">
                <option value="webp" selected>WEBP</option>
                <option value="png">PNG</option>
                <option value="jpg">JPG</option>
            </select>
            <label for="quality">Quality</label>
            <select name="quality" id="quality">
                <option value="50">50</option>
                <option value="60">60</option>
                <option value="70">70</option>
                <option value="75" selected>75</option>
                <option value="80">80</option>
                <option value="90">90</option>
                <option value="100">100</option>
            </select>
            <label for="width">Resolution</label>
            <select name="width" id="width">
                <option value="128">QQVGA</option>
                <option value="240">HQVGA</option>
                <option value="320">QVGA</option>
                <option value="640">VGA</option>
                <option value="1366" selected>HD</option>
                <option value="1920">FULL HD</option>
                <option value="2560">QHD</option>
                <option value="3840">UHD</option>
            </select>
            <input type="submit" value="Optmize" />
        </form>
    </div>
</div>